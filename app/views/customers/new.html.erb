<h1>New Customer</h1>

<%= form_with model: @customer do |form| %>
  <div class="form-group">
    <%= form.label :identifier %><br>
    <%= form.text_field :identifier, {:class => 'form-control'} %>
  </div>

  <div class="col-6">
    <%= form.submit 'Submit', {:class => 'btn btn-success'}%>
  </div>
<% end %>